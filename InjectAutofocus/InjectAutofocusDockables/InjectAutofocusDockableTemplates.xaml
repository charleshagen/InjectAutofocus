    <DataTemplate x:Key="CharlesHagen.NINA.InjectAutofocus.InjectAutofocusDockables.InjectAutofocusDockable_Dockable">
        <ninactrl:AsyncProcessButton
            Margin="8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ButtonImage="{StaticResource AutoFocusSVG}"
            Command="{Binding InjectAutofocus_ButtonCommand}"
            ToolTip="Inject an autofocus command at the next available time in the active sequence" />
